doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title SOSER REPORTS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH', crossorigin='anonymous')
    link(href='/css/main.css', rel='stylesheet')
    link(rel='preconnect', href='https://fonts.googleapis.com')
    link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Montserrat:wght@100..900&family=Roboto+Mono:wght@100..700&family=Roboto:wght@100;300;400;500;700;900&display=swap', rel='stylesheet')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.8.0/chart.min.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js')

  body
    .container
      .row
        .title-history-section
          .col-xl-12
            h1 SOSER REPORTS
            p Reporte semanal de productos de órdenes de compras faltantes.

      .container
        .row
          .graphic-history-section
            .col-xl-12
              video#video(src='/assets/robot.mp4', width='100%', autoplay muted playsinline)
              canvas#chart(style='display: none;') // El gráfico estará oculto inicialmente

          .col.clasificacion-section
            h4 Ranking por clasificación
            #clasificacion-section

          .col.proveedor-section
            h4 Ranking por proveedor
            #proveedor-section

          .col.bodega-section
            h4 Ranking por bodega
            #bodega-section

      .container
        .row
          .col-12
            .filter-container
              h4 Filtrar
              p Seleccione rango de fechas
              .d-flex.align-items-center.mb-3
                input#startDate.form-control.me-2(type='date')
                input#endDate.form-control.me-2(type='date')
                button#filterButton.btn.btn-primary(type='button') Filtrar
              form#filterForm
                .mb-3
                  label(for='filterType', class='form-label') Seleccionar Filtro
                  select#filterType.form-select
                    option(value='') Seleccione un filtro
                    option(value='Bodega') BODEGA
                    option(value='Clasificacion') CATEGORIA
                    option(value='Razon') PROVEEDOR
                    option(value='ucrea') EJECUTIVO
                #filterOptionsContainer.mb-3
                  label(for='filterOptions', class='form-label') Opciones del Filtro
                  select#filterOptions.form-select
                    option(selected, value='') Seleccione una opción
                #additionalFilterContainer.mb-3.mt-3(style='display: none;')
                  label(for='additionalFilter', class='form-label') Filtrar por proveedor
                  select#additionalFilter.form-select
                    option(value='') Seleccione una opción
                    option(value='ALIMENTOS VIDA ESTABLE S.A') ALIMENTOS VIDA ESTABLE S.A

      .container
        .row
          .col-md-6
            .chart-container.mt-3
              // El canvas se muestra después del video
              canvas#myAreaChart
          .col-md-6
            .log-container#logContainer.mt-3
              h4 Datos obtenidos por consulta
              // Aquí se agregarán los resúmenes de datos
            button.btn.btn-success.mt-3.mb-2#exportButton Convertir excel

        .row.mt-4
          .data-table-container#dataTableContainer

    //- Scripts personalizados
    script(type='module', src='/js/fetchdata.js')
    script(type='module', src='/js/graphicHistory.js')
    script(type='module', src='/js/rankingHistory.js')
    script(type='module', src='/js/filterData.js')
    
